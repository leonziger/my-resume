<div class="main-banner">
<div class="container main-banner__container">
    <div class="main-banner__headline">
        <img src="images/main-title.png" alt="">
    </div>
    <form action="" class="main-banner__form" novalidate>
        <div class="main-banner__field-wrapper">
                <label for="fio" class="main-banner__field-label">Полное ФИО</label>
                <input type="text" name="name" id="fio" class="main-banner__field" autocomplete="off">
        </div>
        <div class="main-banner__field-wrapper">
            <label for="birthyear" class="main-banner__field-label">Год рождения</label>
            <input type="text" name="byear" id="birthyear" class="main-banner__field" autocomplete="off">
        </div>
        <div class="main-banner__field-wrapper">
            <label for="town" class="main-banner__field-label">Место жительства</label>
            <input type="text" name="city" id="town" class="main-banner__field" autocomplete="off">
        </div>
        <div class="main-banner__field-wrapper">
            <label for="skype" class="main-banner__field-label">Скайп</label>
            <input type="text" name="skype" id="skype" class="main-banner__field" autocomplete="off">
        </div>
        <div class="main-banner__field-wrapper">
            <label for="email" class="main-banner__field-label">Почта</label>
            <input type="text" name="email" id="email" class="main-banner__field" autocomplete="off">
        </div>
    </form>
</div>
</div>

